extends basic_layout

block extended_layout
	body
		.row
			.col-md-12.jumbotron
				h1.login-title.text-center Log in to proceed to the site!
		.row
			.col-md-offset-4.col-md-4.well
				form(action="/signin",method="POST",role="form").form-signin
					if error && error != ""
						.alert.alert-danger
							p
								= error
					.form-group
						label(for="email") Email
						input(id="email",type="text",placeholer="Please write down your email",name="username").form-control
					.form-group
						label(for="password") Password
						input(id="password",type="password",name="password").form-control
					.form-group
						input(type="submit",value="Log in").btn.btn-lg.btn-primary
					a(href="/signup") Create an account!
